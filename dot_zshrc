# For a full list of active aliases, run `alias`.
#
# Example aliases
alias zshconfig="nvim ~/.zshrc"
alias vim="nvim"
alias vi="hx"
alias oldvim="vim"
alias cat="bat"
alias rm="trash" rd="trash -r" md="mkdir -p"
